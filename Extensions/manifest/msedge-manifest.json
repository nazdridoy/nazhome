{
  "manifest_version": 3,
  "name": "nazHome",
  "version": "1.0.0",
  "description": "A minimalistic and elegant startpage featuring smart search, customizable widgets, and dynamic backgrounds for your homepage and new tab page.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "chrome_settings_overrides": {
    "homepage": "https://nazhome.pages.dev"
  },
  "chrome_url_overrides": {
    "newtab": "redirect.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; frame-src https://nazhome.pages.dev"
  }
} 